<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".AdminActivity">

    <TextView
        android:id="@+id/default_admin_tv"
        android:text="@string/default_admin_tv"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/editing_students_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Студенты"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/academic_plan_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Учебный план"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/grade_book_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Журнал успеваемости"
            android:textSize="20sp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>