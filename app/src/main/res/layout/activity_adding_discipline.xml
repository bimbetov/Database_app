<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".adding_discipline">

    <TextView
        android:id="@+id/add_discipline_section_tv"
        android:text="Вы в разделе ДОБАВИТЬ ДИСЦИПЛИНУ"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#bdbdbd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_discipline_section_tv"/>

    <LinearLayout
        android:id="@+id/linear_layout_for_add_discipline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/add_discipline_section_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Заполните информацию о дисциплине"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_speciality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Специальность"/>
        <EditText
            android:id="@+id/et_discipline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Дисциплина"/>
        <EditText
            android:id="@+id/et_semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Семестр"/>
        <EditText
            android:id="@+id/et_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Часов"/>
        <EditText
            android:id="@+id/et_reporting_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Форма отчетности"/>
        <Button
            android:id="@+id/add_new_discipline_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Добавить"
            android:textSize="20sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>